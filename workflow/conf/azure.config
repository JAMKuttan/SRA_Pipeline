process {
  executor = 'slurm'
  queue = 'hpc'

  //Process-specific parameters
  withName: checkDesignFile{
    container = 'docker://bicf/bicfbase:1.0'
  }
  withName: downloadSRA {
    container = 'docker://bicf/sratoolkit:1.0'
  }
  withName: rawFastQC {
    container = 'docker://bicf/fastqc:1.0'
  }
  withName: rawMultiQC {
    container = 'docker://bicf/multiqc:1.0'
  }
}

singularity {
  enabled = true
}

//Trace File information
trace {
  enabled = true
  file = 'pipeline_trace.txt'
  field = 'task_id,native_id,process,name,status,exit,submit,start,complete,duration,realtime'
}
